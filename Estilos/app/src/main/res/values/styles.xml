<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Trocando a fonte de todos os componentes no app -->
        <item name="android:fontFamily">cursive</item>

        <!-- Definindo o estilo de todos os "Button" no app -->
        <item name="android:buttonStyle">@style/botao</item>
    </style>

    <style name="destaque">
        <item name="android:textColor">#FF69E1</item>
        <item name="android:background">#D5FF1A</item>
    </style>

    <!-- este estilo herdarÃ¡ tudo do destaque -->
    <style name="destaqueGrande" parent="destaque">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="botao" parent="android:Widget.Button">
        <item name="android:textColor">#673AB7</item>
    </style>
</resources>
