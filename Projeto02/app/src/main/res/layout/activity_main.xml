<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juntos e Shallow now"
            android:textSize="30sp"
            android:id="@+id/tvTopo"
            />

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experimenta!"
            app:layout_constraintTop_toBottomOf="@id/tvTopo"
            android:textSize="30sp"
            android:onClick="experimentar"
            android:id="@+id/bt01"
    />

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experimenta Mais"
            app:layout_constraintTop_toBottomOf="@id/bt01"
            android:textSize="30sp"
            android:onClick="experimentarLoko"
            android:id="@+id/bt02"
    />

    <EditText android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@id/bt02"
              android:id="@+id/etFrase"
              android:hint="Digite algo aqui"/>




</android.support.constraint.ConstraintLayout>