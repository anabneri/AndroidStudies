<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

<ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:src="@mipmap/amanda"
    android:id="@+id/imgTopo"
    android:onClick="trocarImagem"/>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Estou aqui"
    app:layout_constraintLeft_toRightOf="@id/imgTopo"
    android:layout_marginLeft="50dp"
    android:id="@+id/btEstouAqui"
/>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="NÃ£o estou aqui"
    app:layout_constraintTop_toBottomOf="@id/btEstouAqui"
    app:layout_constraintLeft_toRightOf="@id/imgTopo"
    android:layout_marginLeft="50dp"
    android:id="@+id/btNaoEstouAqui"
/>


</android.support.constraint.ConstraintLayout>